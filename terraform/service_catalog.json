{
  "services": {
    "task-api": {
      "display_name": "Task API",
      "artifact": {
        "image": "task-api"
      },
      "build": {
        "repository": {
          "owner": "KasumiMercury",
          "name": "todo-server-poc-go"
        },
        "service_account": {
          "account_id": "todo-poc-task-api-ci",
          "display_name": "Todo POC Task API CI Service Account",
          "description": "Service account for Task API GitHub Actions pipeline",
          "roles": [
            "roles/artifactregistry.writer",
            "roles/storage.admin"
          ]
        },
        "workload_identity": {
          "pool_id": "github-ci-cd",
          "provider_id": "github-provider-task-api"
        }
      },
      "runtime": {
        "service_accounts": {
          "production": {
            "account_id": "task-api-runtime",
            "display_name": "Todo POC Task API Runtime Service Account",
            "description": "Runtime service account for Task API (production)",
            "roles": []
          },
          "staging": {
            "account_id": "task-api-runtime-staging",
            "display_name": "Todo POC Task API Runtime Service Account (Staging)",
            "description": "Runtime service account for Task API (staging)",
            "roles": []
          }
        }
      },
      "deploy": {
        "cloud_run": {
          "production": {
            "service_name": "todo-poc-task-api-prod"
          },
          "staging": {
            "service_name": "todo-poc-task-api-staging"
          }
        },
        "defaults": {
          "allow_unauthenticated_access": false,
          "deletion_protection": true
        }
      }
    },
    "id-api": {
      "display_name": "ID API",
      "artifact": {
        "image": "id-api"
      },
      "build": {
        "repository": {
          "owner": "usbharu",
          "name": "todo-user"
        },
        "service_account": {
          "account_id": "todo-poc-id-api-ci",
          "display_name": "Todo POC ID API CI Service Account",
          "description": "Service account for ID API GitHub Actions pipeline",
          "roles": [
            "roles/artifactregistry.writer",
            "roles/storage.admin"
          ]
        },
        "workload_identity": {
          "pool_id": "github-ci-cd",
          "provider_id": "github-provider-id-api"
        }
      },
      "runtime": {
        "service_accounts": {
          "production": {
            "account_id": "id-api-runtime",
            "display_name": "Todo POC ID API Runtime Service Account",
            "description": "Runtime service account for ID API (production)",
            "roles": []
          },
          "staging": {
            "account_id": "id-api-runtime-staging",
            "display_name": "Todo POC ID API Runtime Service Account (Staging)",
            "description": "Runtime service account for ID API (staging)",
            "roles": []
          }
        }
      },
      "deploy": {
        "cloud_run": {
          "production": {
            "service_name": "todo-poc-id-api-prod"
          },
          "staging": {
            "service_name": "todo-poc-id-api-staging"
          }
        },
        "defaults": {
          "allow_unauthenticated_access": false,
          "deletion_protection": true
        }
      }
    }
  }
}
